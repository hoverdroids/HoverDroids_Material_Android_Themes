<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Teal App Theme -->
    <!-- API specific attributes 21+ -->
    <style name="AppTheme.Teal" parent="BaseTheme.Teal">
        <item name="selectableDrawableColor">@color/selector_teal_pressed</item>

        <item name="android:progressBarStyleHorizontal">@style/ProgressBarStyle.Teal.Horizontal</item>
        <item name="android:progressBarStyle">@style/ProgressBarStyle.Teal</item>
        <item name="android:indeterminateProgressStyle">@style/ProgressBarStyle.Teal</item>
        <item name="android:seekBarStyle">@style/SeekbarStyle.Teal</item>
        <item name="seekBarStyle">@style/SeekbarStyle.Teal</item>
    </style>

    <!-- Progress Bar Styles -->
    <style name="ProgressBarStyle.Teal" parent="Widget.AppCompat.ProgressBar">

        <item name="android:progressTint">@color/material_teal_a700</item>
        <item name="android:progressBackgroundTint">@color/material_teal_a700_pct_60</item>

        <item name="android:secondaryProgressTint">@color/material_teal_a700_pct_60</item>
        <item name="android:secondaryProgressTintMode">src_in</item>

        <item name="android:indeterminateTintMode">src_in</item>
        <item name="android:indeterminateTint">@color/material_teal_a700</item>

    </style>

    <style name="ProgressBarStyle.Teal.Horizontal" parent="Widget.AppCompat.ProgressBar.Horizontal">

        <item name="android:progressTint">@color/material_teal_a700</item>
        <item name="android:progressBackgroundTint">@color/material_teal_a700_pct_60</item>

        <item name="android:secondaryProgressTint">@color/material_teal_a700_pct_60</item>
        <item name="android:secondaryProgressTintMode">src_in</item>

        <item name="android:indeterminateTintMode">src_in</item>
        <item name="android:indeterminateTint">@color/material_teal_a700</item>
    </style>

    <!-- Slider Styles -->
    <style name="SeekbarStyle.Teal" parent="Widget.AppCompat.SeekBar">
        <!--Uncomment the following line if you want to colorize the right side of the seekbar-->
        <!--<item name="android:progressBackgroundTint">@color/material_teal_a700_pct_30</item>-->
        <item name="android:thumbTint">@color/material_teal_a700</item>
        <item name="android:thumbTintMode">src_in</item>
        <item name="android:progressTint">@color/material_teal_a700</item>
    </style>

</resources>