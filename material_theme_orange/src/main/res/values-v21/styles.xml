<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Orange App Theme -->
    <!-- API specific attributes 21+ -->
    <style name="AppTheme.Orange" parent="BaseTheme.Orange">
        <item name="selectableDrawableColor">@color/selector_orange_pressed</item>

        <item name="android:progressBarStyleHorizontal">@style/ProgressBarStyle.Orange.Horizontal</item>
        <item name="android:progressBarStyle">@style/ProgressBarStyle.Orange</item>
        <item name="android:indeterminateProgressStyle">@style/ProgressBarStyle.Orange</item>
        <item name="android:seekBarStyle">@style/SeekbarStyle.Orange</item>
        <item name="seekBarStyle">@style/SeekbarStyle.Orange</item>
    </style>

    <!-- Progress Bar Styles -->
    <style name="ProgressBarStyle.Orange" parent="Widget.AppCompat.ProgressBar">

        <item name="android:progressTint">@color/material_orange_a700</item>
        <item name="android:progressBackgroundTint">@color/material_orange_a700_pct_60</item>

        <item name="android:secondaryProgressTint">@color/material_orange_a700_pct_60</item>
        <item name="android:secondaryProgressTintMode">src_in</item>

        <item name="android:indeterminateTintMode">src_in</item>
        <item name="android:indeterminateTint">@color/material_orange_a700</item>

    </style>

    <style name="ProgressBarStyle.Orange.Horizontal" parent="Widget.AppCompat.ProgressBar.Horizontal">

        <item name="android:progressTint">@color/material_orange_a700</item>
        <item name="android:progressBackgroundTint">@color/material_orange_a700_pct_60</item>

        <item name="android:secondaryProgressTint">@color/material_orange_a700_pct_60</item>
        <item name="android:secondaryProgressTintMode">src_in</item>

        <item name="android:indeterminateTintMode">src_in</item>
        <item name="android:indeterminateTint">@color/material_orange_a700</item>
    </style>

    <!-- Slider Styles -->
    <style name="SeekbarStyle.Orange" parent="Widget.AppCompat.SeekBar">
        <!--Uncomment the following line if you want to colorize the right side of the seekbar-->
        <!--<item name="android:progressBackgroundTint">@color/material_orange_a700_pct_30</item>-->
        <item name="android:thumbTint">@color/material_orange_a700</item>
        <item name="android:thumbTintMode">src_in</item>
        <item name="android:progressTint">@color/material_orange_a700</item>
    </style>
</resources>