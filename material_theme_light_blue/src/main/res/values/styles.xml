<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Light_Blue App Theme -->
    <style name="BaseTheme.Light_Blue" parent="AppTheme">
        <!-- Attributes for all APIs -->
        <item name="colorPrimary">@color/material_light_blue_500</item>
        <item name="colorPrimaryDark">@color/material_light_blue_700</item>
        <item name="colorAccent">@color/material_light_blue_a700</item>
        <item name="dialogTheme">@style/AppTheme.Dialog.Light_Blue</item>
        <item name="alertDialogTheme">@style/AppTheme.Dialog.Alert.Light_Blue</item>
    </style>

    <style name="AppTheme.Light_Blue" parent="BaseTheme.Light_Blue">
        <!-- API specific attributes 14+ -->
        <item name="selectableRectDrawableColored">@drawable/state_list_selectable_rect_light_blue</item>
        <item name="selectableRoundedRectDrawableColored">@drawable/state_list_selectable_rounded_rect_light_blue</item>
    </style>

    <!-- Light_Blue Dialog Theme -->
    <style name="AppTheme.Dialog.Light_Blue">
        <item name="colorPrimary">@color/material_light_blue_500</item>
        <item name="colorPrimaryDark">@color/material_light_blue_700</item>
        <item name="colorAccent">@color/material_light_blue_a700</item>
    </style>

    <!-- Light_Blue Alert Dialog Theme -->
    <style name="AppTheme.Dialog.Alert.Light_Blue">
        <item name="colorPrimary">@color/material_light_blue_500</item>
        <item name="colorPrimaryDark">@color/material_light_blue_700</item>
        <item name="colorAccent">@color/material_light_blue_a700</item>
    </style>

</resources>