<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Light_Blue App Theme -->
    <!-- API specific attributes 21+ -->
    <style name="AppTheme.Light_Blue" parent="BaseTheme.Light_Blue">
        <item name="selectableDrawableColor">@color/selector_light_blue_pressed</item>

        <item name="android:progressBarStyleHorizontal">@style/ProgressBarStyle.Light_Blue.Horizontal</item>
        <item name="android:progressBarStyle">@style/ProgressBarStyle.Light_Blue</item>
        <item name="android:indeterminateProgressStyle">@style/ProgressBarStyle.Light_Blue</item>
        <item name="android:seekBarStyle">@style/SeekbarStyle.Light_Blue</item>
        <item name="seekBarStyle">@style/SeekbarStyle.Light_Blue</item>
    </style>

    <!-- Progress Bar Styles -->
    <style name="ProgressBarStyle.Light_Blue" parent="Widget.AppCompat.ProgressBar">

        <item name="android:progressTint">@color/material_light_blue_a700</item>
        <item name="android:progressBackgroundTint">@color/material_light_blue_a700_pct_60</item>

        <item name="android:secondaryProgressTint">@color/material_light_blue_a700_pct_60</item>
        <item name="android:secondaryProgressTintMode">src_in</item>

        <item name="android:indeterminateTintMode">src_in</item>
        <item name="android:indeterminateTint">@color/material_light_blue_a700</item>

    </style>

    <style name="ProgressBarStyle.Light_Blue.Horizontal" parent="Widget.AppCompat.ProgressBar.Horizontal">

        <item name="android:progressTint">@color/material_light_blue_a700</item>
        <item name="android:progressBackgroundTint">@color/material_light_blue_a700_pct_60</item>

        <item name="android:secondaryProgressTint">@color/material_light_blue_a700_pct_60</item>
        <item name="android:secondaryProgressTintMode">src_in</item>

        <item name="android:indeterminateTintMode">src_in</item>
        <item name="android:indeterminateTint">@color/material_light_blue_a700</item>
    </style>

    <!-- Slider Styles -->
    <style name="SeekbarStyle.Light_Blue" parent="Widget.AppCompat.SeekBar">
        <!--Uncomment the following line if you want to colorize the right side of the seekbar-->
        <!--<item name="android:progressBackgroundTint">@color/material_light_blue_a700_pct_30</item>-->
        <item name="android:thumbTint">@color/material_light_blue_a700</item>
        <item name="android:thumbTintMode">src_in</item>
        <item name="android:progressTint">@color/material_light_blue_a700</item>
    </style>

</resources>