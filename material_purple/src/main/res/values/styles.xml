<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Purple Alert Dialog Theme -->
    <style name="AppTheme.Dialog.Alert.Purple">
        <item name="colorPrimary">@color/material_purple_500</item>
        <item name="colorPrimaryDark">@color/material_purple_700</item>
        <item name="colorAccent">@color/material_purple_a700</item>
    </style>

    <!-- Purple App Theme -->
    <style name="BaseTheme.Purple" parent="AppTheme">
        <!-- Attributes for all APIs -->
        <item name="colorPrimary">@color/material_purple_500</item>
        <item name="colorPrimaryDark">@color/material_purple_700</item>
        <item name="colorAccent">@color/material_purple_a700</item>
        <item name="dialogTheme">@style/AppTheme.Dialog.Purple</item>
        <item name="alertDialogTheme">@style/AppTheme.Dialog.Alert.Purple</item>
    </style>

    <style name="AppTheme.Purple" parent="BaseTheme.Purple">
        <!-- API specific attributes 14+ -->
        <item name="selectableRectDrawableColored">@drawable/state_list_selectable_rect_purple</item>
        <item name="selectableRoundedRectDrawableColored">@drawable/state_list_selectable_rounded_rect_purple</item>
    </style>
    <!-- Purple Dialog Theme -->
    <style name="AppTheme.Dialog.Purple">
        <item name="colorPrimary">@color/material_purple_500</item>
        <item name="colorPrimaryDark">@color/material_purple_700</item>
        <item name="colorAccent">@color/material_purple_a700</item>
    </style>
</resources>