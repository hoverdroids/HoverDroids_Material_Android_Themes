<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Gray App Theme -->
    <!-- API specific attributes 21+ -->
    <style name="AppTheme.Gray" parent="BaseTheme.Gray">
        <item name="selectableDrawableColor">@color/selector_gray_pressed</item>

        <item name="android:progressBarStyleHorizontal">@style/ProgressBarStyle.Gray.Horizontal</item>
        <item name="android:progressBarStyle">@style/ProgressBarStyle.Gray</item>
        <item name="android:indeterminateProgressStyle">@style/ProgressBarStyle.Gray</item>
        <item name="android:seekBarStyle">@style/SeekbarStyle.Gray</item>
        <item name="seekBarStyle">@style/SeekbarStyle.Gray</item>
    </style>

    <!-- Progress Bar Styles -->
    <style name="ProgressBarStyle.Gray" parent="Widget.AppCompat.ProgressBar">

        <item name="android:progressTint">@color/material_gray_700</item>
        <item name="android:progressBackgroundTint">@color/material_gray_pct_60</item>

        <item name="android:secondaryProgressTint">@color/material_gray_pct_60</item>
        <item name="android:secondaryProgressTintMode">src_in</item>

        <item name="android:indeterminateTintMode">src_in</item>
        <item name="android:indeterminateTint">@color/material_gray_700</item>

    </style>

    <style name="ProgressBarStyle.Gray.Horizontal" parent="Widget.AppCompat.ProgressBar.Horizontal">

        <item name="android:progressTint">@color/material_gray_700</item>
        <item name="android:progressBackgroundTint">@color/material_gray_pct_60</item>

        <item name="android:secondaryProgressTint">@color/material_gray_pct_60</item>
        <item name="android:secondaryProgressTintMode">src_in</item>

        <item name="android:indeterminateTintMode">src_in</item>
        <item name="android:indeterminateTint">@color/material_gray_700</item>
    </style>

    <!-- Slider Styles -->
    <style name="SeekbarStyle.Gray" parent="Widget.AppCompat.SeekBar">
        <!--Uncomment the following line if you want to colorize the right side of the seekbar-->
        <!--<item name="android:progressBackgroundTint">@color/material_gray_a700_pct_30</item>-->
        <item name="android:thumbTint">@color/material_gray_700</item>
        <item name="android:thumbTintMode">src_in</item>
        <item name="android:progressTint">@color/material_gray_700</item>
    </style>

</resources>