<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Cyan App Theme -->
    <style name="BaseTheme.Cyan" parent="AppTheme">
        <!-- Attributes for all APIs -->
        <item name="colorPrimary">@color/material_cyan_500</item>
        <item name="colorPrimaryDark">@color/material_cyan_700</item>
        <item name="colorAccent">@color/material_cyan_a700</item>
        <item name="dialogTheme">@style/AppTheme.Dialog.Cyan</item>
        <item name="alertDialogTheme">@style/AppTheme.Dialog.Alert.Cyan</item>
    </style>

    <style name="AppTheme.Cyan" parent="BaseTheme.Cyan">
        <!-- API specific attributes 14+ -->
        <item name="selectableRectDrawableColored">@drawable/state_list_selectable_rect_cyan</item>
        <item name="selectableRoundedRectDrawableColored">@drawable/state_list_selectable_rounded_rect_cyan</item>
    </style>

    <!-- Cyan Dialog Theme -->
    <style name="AppTheme.Dialog.Cyan">
        <item name="colorPrimary">@color/material_cyan_500</item>
        <item name="colorPrimaryDark">@color/material_cyan_700</item>
        <item name="colorAccent">@color/material_cyan_a700</item>
    </style>

    <!-- Cyan Alert Dialog Theme -->
    <style name="AppTheme.Dialog.Alert.Cyan">
        <item name="colorPrimary">@color/material_cyan_500</item>
        <item name="colorPrimaryDark">@color/material_cyan_700</item>
        <item name="colorAccent">@color/material_cyan_a700</item>
    </style>

</resources>