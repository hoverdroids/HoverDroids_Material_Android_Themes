<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Lime App Theme -->
    <style name="BaseTheme.Lime" parent="AppTheme">
        <!-- Attributes for all APIs -->
        <item name="colorPrimary">@color/material_lime_500</item>
        <item name="colorPrimaryDark">@color/material_lime_700</item>
        <item name="colorAccent">@color/material_lime_a700</item>
        <item name="dialogTheme">@style/AppTheme.Dialog.Lime</item>
        <item name="alertDialogTheme">@style/AppTheme.Dialog.Alert.Lime</item>
    </style>

    <style name="AppTheme.Lime" parent="BaseTheme.Lime">
        <!-- API specific attributes 14+ -->
        <item name="selectableRectDrawableColored">@drawable/state_list_selectable_rect_lime</item>
        <item name="selectableRoundedRectDrawableColored">@drawable/state_list_selectable_rounded_rect_lime</item>
    </style>

    <!-- Lime Dialog Theme -->
    <style name="AppTheme.Dialog.Lime">
        <item name="colorPrimary">@color/material_lime_500</item>
        <item name="colorPrimaryDark">@color/material_lime_700</item>
        <item name="colorAccent">@color/material_lime_a700</item>
    </style>

    <!-- Lime Alert Dialog Theme -->
    <style name="AppTheme.Dialog.Alert.Lime">
        <item name="colorPrimary">@color/material_lime_500</item>
        <item name="colorPrimaryDark">@color/material_lime_700</item>
        <item name="colorAccent">@color/material_lime_a700</item>
    </style>

</resources>