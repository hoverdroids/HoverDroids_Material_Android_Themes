<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Pink App Theme -->
    <style name="BaseTheme.Pink" parent="AppTheme">
        <!-- Attributes for all APIs -->
        <item name="colorPrimary">@color/material_pink_500</item>
        <item name="colorPrimaryDark">@color/material_pink_700</item>
        <item name="colorAccent">@color/material_pink_a700</item>
        <item name="dialogTheme">@style/AppTheme.Dialog.Pink</item>
        <item name="alertDialogTheme">@style/AppTheme.Dialog.Alert.Pink</item>
    </style>

    <style name="AppTheme.Pink" parent="BaseTheme.Pink">
        <!-- API specific attributes 14+ -->
        <item name="selectableRectDrawableColored">@drawable/state_list_selectable_rect_pink</item>
        <item name="selectableRoundedRectDrawableColored">@drawable/state_list_selectable_rounded_rect_pink</item>
    </style>

    <!-- Pink Dialog Theme -->
    <style name="AppTheme.Dialog.Pink">
        <item name="colorPrimary">@color/material_pink_500</item>
        <item name="colorPrimaryDark">@color/material_pink_700</item>
        <item name="colorAccent">@color/material_pink_a700</item>
    </style>

    <!-- Pink Alert Dialog Theme -->
    <style name="AppTheme.Dialog.Alert.Pink">
        <item name="colorPrimary">@color/material_pink_500</item>
        <item name="colorPrimaryDark">@color/material_pink_700</item>
        <item name="colorAccent">@color/material_pink_a700</item>
    </style>

</resources>