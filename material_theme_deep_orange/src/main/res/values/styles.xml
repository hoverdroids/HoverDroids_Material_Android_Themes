<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Deep_Orange App Theme -->
    <style name="BaseTheme.Deep_Orange" parent="AppTheme">
        <!-- Attributes for all APIs -->
        <item name="colorPrimary">@color/material_deep_orange_500</item>
        <item name="colorPrimaryDark">@color/material_deep_orange_700</item>
        <item name="colorAccent">@color/material_deep_orange_a700</item>
        <item name="dialogTheme">@style/AppTheme.Dialog.Deep_Orange</item>
        <item name="alertDialogTheme">@style/AppTheme.Dialog.Alert.Deep_Orange</item>
    </style>

    <style name="AppTheme.Deep_Orange" parent="BaseTheme.Deep_Orange">
        <!-- API specific attributes 14+ -->
        <item name="selectableRectDrawableColored">@drawable/state_list_selectable_rect_deep_orange</item>
        <item name="selectableRoundedRectDrawableColored">@drawable/state_list_selectable_rounded_rect_deep_orange</item>
    </style>

    <!-- Deep_Orange Dialog Theme -->
    <style name="AppTheme.Dialog.Deep_Orange">
        <item name="colorPrimary">@color/material_deep_orange_500</item>
        <item name="colorPrimaryDark">@color/material_deep_orange_700</item>
        <item name="colorAccent">@color/material_deep_orange_a700</item>
    </style>

    <!-- Deep_Orange Alert Dialog Theme -->
    <style name="AppTheme.Dialog.Alert.Deep_Orange">
        <item name="colorPrimary">@color/material_deep_orange_500</item>
        <item name="colorPrimaryDark">@color/material_deep_orange_700</item>
        <item name="colorAccent">@color/material_deep_orange_a700</item>
    </style>

</resources>