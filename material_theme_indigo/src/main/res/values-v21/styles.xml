<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Indigo App Theme -->
    <!-- API specific attributes 21+ -->
    <style name="AppTheme.Indigo" parent="BaseTheme.Indigo">
        <item name="selectableDrawableColor">@color/selector_indigo_pressed</item>

        <item name="android:progressBarStyleHorizontal">@style/ProgressBarStyle.Indigo.Horizontal</item>
        <item name="android:progressBarStyle">@style/ProgressBarStyle.Indigo</item>
        <item name="android:indeterminateProgressStyle">@style/ProgressBarStyle.Indigo</item>
        <item name="android:seekBarStyle">@style/SeekbarStyle.Indigo</item>
        <item name="seekBarStyle">@style/SeekbarStyle.Indigo</item>
    </style>

    <!-- Progress Bar Styles -->
    <style name="ProgressBarStyle.Indigo" parent="Widget.AppCompat.ProgressBar">

        <item name="android:progressTint">@color/material_indigo_a700</item>
        <item name="android:progressBackgroundTint">@color/material_indigo_a700_pct_60</item>

        <item name="android:secondaryProgressTint">@color/material_indigo_a700_pct_60</item>
        <item name="android:secondaryProgressTintMode">src_in</item>

        <item name="android:indeterminateTintMode">src_in</item>
        <item name="android:indeterminateTint">@color/material_indigo_a700</item>

    </style>

    <style name="ProgressBarStyle.Indigo.Horizontal" parent="Widget.AppCompat.ProgressBar.Horizontal">

        <item name="android:progressTint">@color/material_indigo_a700</item>
        <item name="android:progressBackgroundTint">@color/material_indigo_a700_pct_60</item>

        <item name="android:secondaryProgressTint">@color/material_indigo_a700_pct_60</item>
        <item name="android:secondaryProgressTintMode">src_in</item>

        <item name="android:indeterminateTintMode">src_in</item>
        <item name="android:indeterminateTint">@color/material_indigo_a700</item>
    </style>

    <!-- Slider Styles -->
    <style name="SeekbarStyle.Indigo" parent="Widget.AppCompat.SeekBar">
        <!--Uncomment the following line if you want to colorize the right side of the seekbar-->
        <!--<item name="android:progressBackgroundTint">@color/material_indigo_a700_pct_30</item>-->
        <item name="android:thumbTint">@color/material_indigo_a700</item>
        <item name="android:thumbTintMode">src_in</item>
        <item name="android:progressTint">@color/material_indigo_a700</item>
    </style>

</resources>