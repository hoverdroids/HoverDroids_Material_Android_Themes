<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Black App Theme -->
    <!-- API specific attributes 21+ -->
    <style name="AppTheme.Black" parent="BaseTheme.Black">
        <item name="selectableDrawableColor">@color/selector_black_pressed</item>

        <item name="android:progressBarStyleHorizontal">@style/ProgressBarStyle.Black.Horizontal</item>
        <item name="android:progressBarStyle">@style/ProgressBarStyle.Black</item>
        <item name="android:indeterminateProgressStyle">@style/ProgressBarStyle.Black</item>
        <item name="android:seekBarStyle">@style/SeekbarStyle.Black</item>
        <item name="seekBarStyle">@style/SeekbarStyle.Black</item>
    </style>

    <!-- Progress Bar Styles -->
    <style name="ProgressBarStyle.Black" parent="Widget.AppCompat.ProgressBar">

        <item name="android:progressTint">@color/material_black</item>
        <item name="android:progressBackgroundTint">@color/material_black_pct_60</item>

        <item name="android:secondaryProgressTint">@color/material_black_pct_60</item>
        <item name="android:secondaryProgressTintMode">src_in</item>

        <item name="android:indeterminateTintMode">src_in</item>
        <item name="android:indeterminateTint">@color/material_black</item>

    </style>

    <style name="ProgressBarStyle.Black.Horizontal" parent="Widget.AppCompat.ProgressBar.Horizontal">

        <item name="android:progressTint">@color/material_black</item>
        <item name="android:progressBackgroundTint">@color/material_black_pct_60</item>

        <item name="android:secondaryProgressTint">@color/material_black_pct_60</item>
        <item name="android:secondaryProgressTintMode">src_in</item>

        <item name="android:indeterminateTintMode">src_in</item>
        <item name="android:indeterminateTint">@color/material_black</item>
    </style>

    <!-- Slider Styles -->
    <style name="SeekbarStyle.Black" parent="Widget.AppCompat.SeekBar">
        <!--Uncomment the following line if you want to colorize the right side of the seekbar-->
        <!--<item name="android:progressBackgroundTint">@color/material_black_a700_pct_30</item>-->
        <item name="android:thumbTint">@color/material_black</item>
        <item name="android:thumbTintMode">src_in</item>
        <item name="android:progressTint">@color/material_black</item>
    </style>

</resources>